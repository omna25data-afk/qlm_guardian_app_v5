{
    "info": {
        "_postman_id": "9b8c7d6e-5f4a-3b2c-1d0e-9f8e7d6c5b4a",
        "name": "قلم التوثيق - QLM API Standardized (v2)",
        "description": "مجموعة واجهات برمجة التطبيقات (APIs) الموحدة لنظام قلم التوثيق",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "المصادقة (Auth)",
            "item": [
                {
                    "name": "تسجيل الدخول (Login)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.status === true) {",
                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "    console.log(\"Token updated successfully\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "login_identifier",
                                    "value": "{{login_identifier}}",
                                    "type": "text"
                                },
                                {
                                    "key": "password",
                                    "value": "{{password}}",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "لوحة الإدارة (Admin)",
            "item": [
                {
                    "name": "الإحصائيات (Dashboard)",
                    "request": {
